@model User
<img class="bd-placeholder-img" style="max-width: 50px; height: 50px; padding-right:15px;" src="@Model.Avatar" />
<p style="color: green; padding-right: 15px;">@Model.Name</p>
@{
    if (Model.Admin)
    {
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Набор доп опций</button>
    }
}
<a href="/Home/logOut">
    <button class="btn btn-outline-success my-2 my-sm-0">Out</button>
</a>
